<div class="row">
  <div class="col-md-6">
    <h2>Register</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input_field :email, required: true, autofocus: true, class: 'form-control', placeholder: 'Email' %>
        </div>
        <div class="form-group">
          <%= f.input_field :name, required: true, class: 'form-control', placeholder: 'Full name' %>
        </div>
        <div class="form-group">
          <%= f.input_field :address, required: true, class: 'form-control', placeholder: 'Full address: Street, City State, Zip' %>
        </div>
        <div class="form-group">
          <%= f.input_field :password, required: true, class: 'form-control', placeholder: 'Password' %>
        </div>
        <div class="form-group">
          <%= f.input_field :password_confirmation, required: true, class: 'form-control', placeholder: 'Password confirmation' %>
        </div>

        <div class="form-group">
          <%= f.button :submit, 'Sign up', class: 'btn btn-primary' %>
        </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
