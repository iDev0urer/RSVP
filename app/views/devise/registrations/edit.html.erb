<div class="row">
  <div class="col-md-6">

    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input_field :email, required: true, autofocus: true, class: 'form-control', placeholder: 'Email' %>
        </div>

        <div class="form-group">
          <%= f.input_field :name, class: 'form-control', placeholder: 'Full name' %>
        </div>

        <div class="form-group">
          <%= f.input_field :address, required: true, class: 'form-control', placeholder: 'Full address' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <div class="form-group">
          <%= f.input_field :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, class: 'form-control', placeholder: 'New password' %>
        </div>

        <div class="form-group">
          <%= f.input_field :password_confirmation, required: false, class: 'form-control', placeholder: 'Confirm new password' %>
        </div>

        <div class="form-group">
          <%= f.input_field :current_password, hint: "we need your current password to confirm your changes", required: true, class: 'form-control', placeholder: 'Current password' %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Update", class: 'btn btn-primary' %>
        </div>

    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>

  </div>
</div>