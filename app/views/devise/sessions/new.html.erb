<div class="row">
  <div class="col-md-6">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.input_field :email, required: false, autofocus: true, class: 'form-control', placeholder: 'Email' %>
        </div>
        <div class="form-group">
          <%= f.input_field :password, required: false, class: 'form-control', placeholder: 'Password' %>
        </div>
        <div class="checkbox">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>